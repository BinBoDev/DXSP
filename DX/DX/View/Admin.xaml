        mc:Ignorable="d"
        Title="Admin" Height="450" Width="800"
        Icon="/DX;component/View/Image/Uni.ico"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <materialDesign:Card Margin="5" BorderThickness="0">
            <StackPanel Orientation="Horizontal">
                <Menu HorizontalAlignment="Center" >
                    <MenuItem Header="File" Height="20" Margin="2"  >
                        
                    </MenuItem>
                    <MenuItem Header="Edit" Height="20" Margin="2" >
                        
                    </MenuItem>
                </Menu>
            </StackPanel>
        </materialDesign:Card>
        <materialDesign:Card Grid.Row="1" Margin="5">

        </materialDesign:Card>
    </Grid>
</Window>
